    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="?attr/actionBarSize">

            <TextView
                android:text="Lecture #1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:id="@+id/textLecture1"/>

            <TextView
                android:text="Day:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_below="@id/textLecture1"
                android:id="@+id/textLecture1Day"/>

            <Spinner
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:layout_below="@id/textLecture1Day"
                android:id="@+id/spinnerDay"/>

            <TextView
                android:text="Start Time - End Time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_below="@id/spinnerDay"
                android:id="@+id/textStartEndTime"/>

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:layout_marginLeft="-40dp"
                android:layout_marginRight="-40dp"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="-40dp"
                android:layout_below="@id/textStartEndTime"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:minDate="2017"
                android:id="@+id/datePickerStart" />

            <TextView
                android:text="to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textStartEndTime"
                android:layout_toRightOf="@id/datePickerStart"
                android:paddingTop="57dp"
                android:id="@+id/textViewDateTo" />

            <DatePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:layout_marginLeft="-40dp"
                android:layout_marginRight="-40dp"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="-40dp"
                android:layout_below="@id/textStartEndTime"
                android:layout_toRightOf="@id/textViewDateTo"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:minDate="2017"
                android:id="@+id/datePickerEnd" />

            <View
                android:id="@+id/viewSeparator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/datePickerEnd"
                android:background="@color/colorDivider" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/viewSeparator">

                <Button
                    android:text="Done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/buttonDone" />

